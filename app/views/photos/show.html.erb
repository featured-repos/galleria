<div class="container photo">
  <div class="row">
    <h1> <%= @photo.title %> </h1>
  </div>
  <div class="row">
    <h5> <%= @photo.description %> </h5>
  </div>
  <div class="row">
    <%= image_tag @photo.photo %>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-2">
      <%= link_to "Previous photo", gallery_photo_path(@gallery, @photo.previous), class: "btn btn-default prev_next" unless @photo == @gallery.photos.first %>
    </div>
    <div class="col-md-offset-2 col-md-2">
      <%= link_to "Next photo", gallery_photo_path(@gallery, @photo.next), class: "btn btn-default prev_next" unless @photo == @gallery.photos.last %>
    </div>
  </div>

  <div class="row share_photo">
    <div class="col-md-12">
      <%= link_to "Share this photo", share_photo_path, class: "btn btn-default" %>
    </div>
  </div>

  <div class="row return">
    <div class="col-md-12">
      <%= link_to "Return to gallery view", @gallery, class: "btn btn-default" %>
    </div>
  </div>
</div>
