<!DOCTYPE html>
<html>
  <head>
    <title>Galleria</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-static-top">
      <div class="container-fluid">
        <div class="navbar-left">
          <p class="navbar-text"> <%= "You are currently logged in as #{current_user.username}" if current_user %> </p>
        </div>
        <div class="navbar-right">
          <% if current_user %>
            <p class="navbar-text"> <%= link_to "Home", :root %> </p>
            <p class="navbar-text"> <%= link_to "Dashboard", :dashboard %> </p>
            <p class="navbar-text"> <%= link_to "Log Out", logout_path, method: :delete %> </p>
          <% else %>
            <p class="navbar-text"> <%= link_to "Home", :root %> </p>
            <p class="navbar-text"> <%= link_to "Log In", login_path %> </p>
          <% end %>

        </div>
      </div>
    </nav>

    <% if flash.any? %>
      <% flash.each do |klass, message| %>
      <div class="alert alert-<%= klass %>" role="alert">
        <p> <%= message %> </p>
      </div>
      <% end %>
    <% end %>

    <%= yield %>


  <footer>
    <div class="container footer">
      <div class="col-md-12">
        Show Me What You Got
      </div>
    </div>
  </footer>

  </body>



</html>
