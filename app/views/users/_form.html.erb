<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">

      <%= simple_form_for @user, class: "form-horizontal" do |f| %>
        <%= f.input :username %>
        <%= f.input :password %>
        <%= f.input :email %>
        <%= f.input :avatar, required: false %>
        <%= f.input :bio, required: false %>
        <div class="row">
          <div class="col-md-12 submit_button">
            <%= f.button :submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
