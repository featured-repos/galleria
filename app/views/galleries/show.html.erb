<% if flash.any? %>
  <% flash.each do |klass, message| %>
  <div class="alert alert-<%= klass %>" role="alert">
    <p> <%= message %> </p>
  </div>
  <% end %>
<% end %>

<h1> Gallery name: <%= @gallery.title %> </h1>
<h5> Created at <%=@gallery.created_at %> </h5>

<div class="container">
  <% @gallery.photos.each do |f| %>
    <div class="col-md-2">
      <div class="row">
        <%= link_to f.title %>
      </div>
      <div class="row">
        <%= link_to f do %>
        <%= image_tag f.size(:thumbnail) %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      Add a new photo
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= link_to "New photo", new_gallery_photo_path(@gallery), class: "btn btn-default btn-block" %>
    </div>
  </div>
</div>



<div class="container">

  <div class="row">
    <div class="col-md-offset-5 col-md-2">
      <%= link_to "Share this gallery", share_path(@gallery), class: "btn btn-primary btn-block" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-5 col-md-2">
      <%= link_to "Delete this gallery", gallery_path(@gallery), method: :delete, class: "btn btn-danger btn-block" %>
    </div>
  </div>
</div>
